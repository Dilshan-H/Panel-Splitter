<Window x:Class="Panel_Splitter.UpdateNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Panel_Splitter"
        mc:Ignorable="d"
        Title="Update Available" Height="150" Width="370"
        WindowStyle="None" ResizeMode="NoResize" Topmost="True" Background="#FF1E222D" ShowInTaskbar="False">
    <Grid Margin="10,10,10,10">
        <TextBlock TextWrapping="Wrap" Margin="81,44,0,68" Foreground="#FFE8E8E8" FontSize="14" HorizontalAlignment="Left" Text="A new update is available!"/>
        <Button Content="Install" Width="155" HorizontalAlignment="Left" Click="InstallButton_Click" Margin="16,85,0,15" Height="30" TabIndex="1"/>
        <Button Content="Dismiss" Click="DismissButton_Click" Margin="181,85,14,15" Width="155" Height="30" TabIndex="2" IsCancel="True"/>
        <Image HorizontalAlignment="Left" Height="48" Margin="19,17,0,0" VerticalAlignment="Top" Width="49" Source="/icon.png"/>
        <TextBlock Text="Panel Splitter for Adobe Photoshop" TextWrapping="Wrap" Margin="81,19,0,90" Foreground="#FFE8E8E8" FontSize="16" HorizontalAlignment="Left"/>
    </Grid>
</Window>
